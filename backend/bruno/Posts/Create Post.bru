meta {
  name: Create Post
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/posts
  body: json
  auth: none
}

headers {
  Authorization: Bearer {{accessToken}}
}

body:json {
  {
    "content": "Hello world from Bruno Mayur!",
    "tags": ["testing", "ai"]
  }
}

vars:pre-request {
  baseUrl: http://localhost:8080
}

script:post-response {
  if (res.status === 201) {
    bru.setVar("postId", res.body.id);
  }
}
